/**app.wxss**/
@import 'styles/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 10px;
} 
page {
  background-color: #ebebef;
  /* height: 100%; *//* font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif; */
  font-family: "Microsoft Yahei", "微软雅黑", Tahoma, Arial, Helvetica, STHeiti;
}

.row {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
} 

.cell {
  box-sizing: border-box;
  flex: 1;
}
/*没有数据  */
.noData {
  text-align: center;
  font-size: 14px;
  color: #999;
  padding-top: 10px;
}

/*回到顶部按钮  */
.gototop {
  width: 70rpx;
  height: 70rpx;
  background: url(data:image/png;base64,) no-repeat 50% 50% / 100% auto;
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;
  transition: all 0.3s;
  opacity: 0;
  transform: translateY(200rpx);
}

.gototop.active {
  opacity: 1;
  transform: translateY(0);
}

.item-center {
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.row-wrap {
  height: 20px;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.message-content {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

/*隐藏  */

.hide {
  display: none;
}

/*弹出层  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.15;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  font-size: 14pt;
 
}

.maskWrap {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1001;
  text-align: center;
}

.row  .item {
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  padding: 10px;
  color: #333;
  text-align: center;
}
