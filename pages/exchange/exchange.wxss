.tab-content .cell{
  line-height: 30px;
}
.content-list{
 background: #1e212a;
 font-size: 12px;
 text-align: center;
 padding: 0 10px;
 margin-top: 30px;
}
.content-list .list{
 padding: 10px 0;
 border-bottom: 1px solid #20272c;
}
.col-9{
  color: #999;
}
.narbar-cell{
  width: 85%;
}
.weui-navbar {
  width: 85%;
  background-color:#1E212A;
}
.search-area{
    display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  position: fixed;
  z-index: 500;
  background-color:#1E212A;
  height:50px;
}

.search-cell{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  width:15%;
  height:50px;
  z-index: 501;
}

.search-right{
  flex: 2;
}
.search-btn{
  margin:16px;

}
.list-down,.list-up{
  display: inline-block;
  vertical-align:middle;
}

.tab-on{
  color: #f0b90b;
}
.flex-4{
  flex: 4;
}
.flex-3{
  flex: 3;
}
.back-btn{
  vertical-align:middle;
  display:inline-block;
  width:80%;
  line-height:25px;
  background:#9a1e1e;
  border-radius:3px;
  position:relative;
  left:20%;
}

.tab-h{
    height: 50px;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #1E212A; font-size: 15px; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99;color:#fff;
}
.tab-item{margin:0 36rpx;display: inline-block;}
.tab-item.active{color:#f0b90b;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 100rpx;background: #f0b90b;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 180rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.scoll-h{height: 100%;}